<picker bindchange="teamChange" value="{{teamNameIndex}}" range="{{teamNames}}">
	<text style="position:absolute;top:3%;left:14%;font-size:40rpx;font-weight:700;color:white">{{teamNames[teamIndex]}}<text class="cuIcon-unfold lg text-gray" wx:if="{{teamNames.length>1}}"></text></text>
</picker>
<text style="position:absolute;top:9%;left:14%;font-size:28rpx;font-weight:400;color:white">上次更新：{{teamInfos[teamIndex].tLastUpdate}}</text>
